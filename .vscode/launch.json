    "version": "0.2.0",
    "configurations": [

    {
        "name": "DEV",
        "type": "go",
        "request": "launch",
        "mode": "auto",
        "program": "${workspaceFolder}/.",
        "env": {
          "ENV": "DEV"
        },
        "showLog": true,
        "args": ["-listen",":8081","-log_level","DEBUG","-db_connection","root:1234@/sys?parseTime=true"]
      },
      {
        "name": "DB TEST",
        "type": "go",
        "request": "launch",
        "mode": "test",
        "program": "${fileDirname}",
        "env": {
          "TEST_DB": "root:1234@/sys?parseTime=true",
        },
        "showLog": true,
        "args":[
          "db_test.go"
        ]
      },
    ]
}